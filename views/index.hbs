<h2>Fake YouTube Search</h2>

<!-- form tags ALWAYS need action="" and method="" attributes
     (they control which route you go to when you submit) -->
<form action="/results" method="GET">
  <!-- input tags ALWAYS need a name="" attribute
       (name controls what the user text is called when you submit) -->
  <input type="search" name="search_query" placeholder="Search for a video..." />

  <!-- form tags ALWAYS need a submit button INSIDE the form -->
  <button>Search</button>
</form>
